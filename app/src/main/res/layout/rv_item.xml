<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--官方建议新闻类recyclerview使用cardview-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="8dp"
                android:text="国家统计局：4 月份规上工业原煤产量 3.7 亿吨 同比下降 2.9%"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="6"
                    android:padding="5dp"
                    android:text="国家统计局数据显示，4 月份我国规上工业原煤产量为 3.7 亿吨，同比下降 2.9%，降幅较 3 月收窄 1.3 个百分点，日均产量为 1239 万吨。同时，煤炭进口量同比增长 11.3%，达到 4525 万吨。1 至 4 月份，原煤产量累计 14.8 亿吨，同比下降 3.5%，进口量累计 1.6 亿吨，同比增长 13.1%。"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_news"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:padding="5dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>